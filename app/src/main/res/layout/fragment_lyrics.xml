<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical">

        <Button
            android:id = "@+id/home_button"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "0"
            android:text = "home"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars = "vertical"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="30dp"
            android:ellipsize="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:text = "lyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \nlyrics \n"
                    android:textStyle = "normal"
                    android:fontFamily = "sans-serif"
                    android:textSize = "32sp"
                    android:textColor = "@android:color/black"
                    android:gravity = "center"/>

            </LinearLayout>
        </ScrollView>


        <Button
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "0"
            android:text = "guess"/>



    </LinearLayout>

</RelativeLayout>